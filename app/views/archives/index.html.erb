<p id="notice"><%= notice %></p>

<h1>Archives</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Health</th>
      <th>Actionrate</th>
      <th>Damage</th>
      <th>Speed</th>
      <th>Defense</th>
      <th>Range</th>
      <th>Troopdamage</th>
      <th>Maxdist</th>
      <th>Description</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @archives.each do |archive| %>
      <tr>
        <td><%= archive.title %></td>
        <td><%= archive.health %></td>
        <td><%= archive.actionrate %></td>
        <td><%= archive.damage %></td>
        <td><%= archive.speed %></td>
        <td><%= archive.defense %></td>
        <td><%= archive.range %></td>
        <td><%= archive.troopDamage %></td>
        <td><%= archive.maxDist %></td>
        <td><%= archive.description %></td>
        <td><%= archive.notes %></td>
        <td><%= link_to 'Show', archive %></td>
        <td><%= link_to 'Edit', edit_archive_path(archive) %></td>
        <td><%= link_to 'Destroy', archive, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

